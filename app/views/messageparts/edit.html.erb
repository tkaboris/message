<h1>Edit Content Part</h1>
<%= simple_form_for([@message, @messagepart]) do |f| %>
  <%= f.input :contentparttitle, label: "Title" %>
  <%= f.cktext_area :contentpart, label: "Content Part" %>
  <%= f.input :send_at, :as => :date_picker, input_html: {data: {date_options: { minDate: @message.send_at }}} %>
  <%= f.input :image, label: "Attach image" %>
  <i class="glyphicon glyphicon-camera glyphicon-2x" id="msgpart_camera_icon"></i>
  <%= image_tag @messagepart.attached_img, size: "100x100", id: "msgpart_attached_image" %><br/>
  <%= link_to "delete Image", "/messagepart/delete/"+@messagepart.id.to_s, data: {confirm: 'Are you sure?'} %>
  <%= f.button :submit %>
<% end %>
